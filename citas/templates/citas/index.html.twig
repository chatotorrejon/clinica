{% extends 'base.html.twig' %}

{% block title %}Citas index{% endblock %}

{% block body %}
    <h1>Citas index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Medico</th>
                <th>Paciente</th>
                <th>Identificacion</th>
                <th>Fecha_cita</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cita in citas %}
            <tr>
                <td>{{ cita.id }}</td>
                <td>{{ cita.medico }}</td>
                <td>{{ cita.paciente }}</td>
                <td>{{ cita.identificacion }}</td>
                <td>{{ cita.fechaCita ? cita.fechaCita|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_citas_show', {'id': cita.id}) }}">show</a>
                    <a href="{{ path('app_citas_edit', {'id': cita.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_citas_new') }}">Create new</a>
{% endblock %}
